{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Server",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
            },
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload",
                "--skip-checks"
            ],
            "django": true,
            "noDebug": true,
            "preLaunchTask": "Dev: runserver preflight",
            "env": {
                "DJANGO_SUPPRESS_MIGRATION_CHECK": "1"
            }
        },
        {
            "name": "Debug Server",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
            },
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--skip-checks"
            ],
            "env": {
                "DEBUG": "1",
                "DJANGO_SUPPRESS_MIGRATION_CHECK": "1"
            },
            "subProcess": true,
            "preLaunchTask": "Dev: runserver preflight"
        },
        {
            "name": "Migration Server",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
            },
            "module": "apps.vscode.migration_server",
            "cwd": "${workspaceFolder}",
            "noDebug": true,
            "console": "integratedTerminal",
            "subProcess": true
        },
        {
            "name": "Test Server",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
            },
            "module": "apps.vscode.test_server",
            "cwd": "${workspaceFolder}",
            "noDebug": true
        },
        {
            "name": "Pyxel viewport",
            "type": "python",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "windows": {
                "python": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
            },
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "pyxel_viewport",
                "--output-dir",
                "${workspaceFolder}/work/pyxel_viewport",
                "--pyxel-runner",
                "pyxel",
                "--ensure-instance"
            ],
            "django": true,
            "console": "integratedTerminal"
        }
    ]
}
